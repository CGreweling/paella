{
    "title": "Paellapackage",
    "description": "Paella player package",
    "type": "object",
    "definitions":{
        "videostream":{
            "id":"videostream",
            "type":"array",
            "items":{
                "type":"object",
                "properties":{
                    "src":{
                        "description":"Url of the video stream",
                        "type":"string"
                    },
                    "type":{
                        "description":"Mimetype of the video",
                        "type":"string",
                        "enum":[
                            "video/mp4",
                            "video/x-flv",
                            "application/x-mpegURL",
                            "video/MP2T",
                            "video/3gpp",
                            "video/quicktime",
                            "video/x-msvideo",
                            "video/x-ms-wmv"
                        ],
                        "default":"video/mp4"
                    },
                    "res":{
                        "type":"object",
                        "properties":{
                            "w":{
                                "description":"video width",
                                "type":"integer"
                            },
                            "h":{
                                "description":"video height",
                                "type":"integer"
                            }
                        }
                    }
                }
            }
        }
    },
    "properties":{
        "streams":{
            "description" : "Video streams, paella by default accepts a max of 2",
            "propertyOrder": 1,
            "type":"array",
            "items":{
                "type":"object",
                "properties":
                {
                    "sources":{
                        "description" : "The source of the video stream, can be a video or a set of images",
                        "oneOf":[
                            {

                                "title":"mp4",
                                "type":"object",
                                "properties":
                                {
                                    "mp4":{
                                        "$ref":"videostream.schema.json"
                                    }
                                }
                            },
                            {
                                "title":"ogg",
                                "type":"object",
                                "properties":
                                {
                                    "ogg":{
                                        "$ref":"videostream.schema.json"
                                    }
                                }
                            },
                            {
                                "title":"webm",
                                "type":"object",
                                "properties":
                                {
                                    "webm":{
                                        "$ref":"videostream.schema.json"
                                    }
                                }
                            },
                            {
                                "title":"flv",
                                "type":"object",
                                "properties":
                                {
                                    "flv":{
                                        "$ref":"videostream.schema.json"
                                    }
                                }
                            },
                            {
                                "title":"rtmp",
                                "type":"object",
                                "properties":
                                {
                                    "rtmp":{
                                        "$ref":"videostream.schema.json"
                                    }
                                }
                            },
                            {
                                "description":"Group of images that will be represented as a video",
                                "title":"image",
                                "type":"array",
                                "items":{
                                    "type":"object",
                                    "properties":{
                                        "type":{
                                            "type":"string",
                                            "enum":[
                                                "image/bmp",
                                                "image/cis-cod",
                                                "image/gif",
                                                "image/ief",
                                                "image/jpeg",
                                                "image/pipeg",
                                                "image/svg+xml",
                                                "image/tiff",
                                                "image/x-cmu-raster",
                                                "image/x-cmx",
                                                "image/x-icon",
                                                "image/x-portable-anymap",
                                                "image/x-portable-bitmap",
                                                "image/x-portable-graymap",
                                                "image/x-portable-pixmap",
                                                "image/x-rgb",
                                                "image/x-xbitmap",
                                                "image/x-xwindowdump"
                                            ]
                                        },
                                        "frames":{
                                            "type":"array",
                                            "items":{
                                                "type":"object",
                                                "properties":{
                                                    "time":{
                                                        "description":"Time of the slide appearance",
                                                        "type":"integer"
                                                    },
                                                    "src":{
                                                        "description":"Url of the slide",
                                                        "type":"string"
                                                    }
                                                }
                                            }
                                        },
                                        "count":{
                                            "type":"integer"
                                        },
                                        "duration":{
                                            "type":"integer"
                                        },
                                        "res":{
                                            "type":"object",
                                            "properties":{
                                                "w":{
                                                        "description":"video width",
                                                        "type":"integer"
                                                    },
                                                "h":{
                                                        "description":"video height",
                                                        "type":"integer"
                                                    }
                                                }
                                        }
                                    }
                                }
                            }
                        ]
                    },
                    "preview":{
                        "description":"preview image for the stream",
                        "type":"string"
                    }
                }
            }

        },
        "frameList":{
            "description":"Array of frames that will be used in the storyboard",
            "propertyOrder": 2,
            "type":"array",
            "items":{
                "id":"uniqueframe",
                "type":"object",
                "properties":{
                    "id":{
                        "description":"Generated automatically",
                        "type":"string",
                        "template":"frame_{{time}}",
                        "watch":{
                            "time":"uniqueframe.time"
                        }

                    },
                    "mimetype":{
                        "type":"string",
                        "enum":[
                                        "image/bmp",
                                        "image/cis-cod",
                                        "image/gif",
                                        "image/ief",
                                        "image/jpeg",
                                        "image/pipeg",
                                        "image/svg+xml",
                                        "image/tiff",
                                        "image/x-cmu-raster",
                                        "image/x-cmx",
                                        "image/x-icon",
                                        "image/x-portable-anymap",
                                        "image/x-portable-bitmap",
                                        "image/x-portable-graymap",
                                        "image/x-portable-pixmap",
                                        "image/x-rgb",
                                        "image/x-xbitmap",
                                        "image/x-xwindowdump"
                                    ]
                    },
                    "time":{
                        "description":"The time (in seconds) that corresponds to this frame",
                        "type":"integer"
                    },
                    "url":{
                        "description":"Url of the image",
                        "type":"string"
                    },
                    "thumb":{
                        "description":"Url of the thumb image",
                        "type":"string"
                    }
                }
            }
        }
    }
}


